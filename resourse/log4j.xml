<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">
    <!-- 配置控制台输出-->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p %c{1} - %m%n"/>
        </layout>
    </appender> 

    <!-- Perf4J appenders -->
    <!-- AsyncCoalescingStatisticsAppender收集StopWatch的日志信息并传送到下游的文件appenders -->
    <appender name="CoalescingStatistics"
              class="org.perf4j.log4j.AsyncCoalescingStatisticsAppender">
        <!-- TimeSlice配置多少时间间隔去做一次汇总写入文件中 默认值是 30000 ms -->
        <!-- <param name="TimeSlice" value="10000"/> -->
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="graphMeanExecutionTimes"/>
        <appender-ref ref="graphExecutionTPS"/>
        <appender-ref ref="graphMinExecutionTimes"/>
        <appender-ref ref="graphMaxExecutionTimes"/>
        <appender-ref ref="graphExecutionCount"/>
    </appender>

    <!-- 把汇总的perf4j的日志信息写到perfStats.log文件中去 -->
    <appender name="fileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="perfStats.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>

	<!-- 生成平均执行时间的图表 -->
    <appender name="graphMeanExecutionTimes"
              class="org.perf4j.log4j.GraphingStatisticsAppender">
        <!-- GraphType:Mean（平均值）, Min（最小值）, Max（最大值）, TPS（每秒事务数） -->
        <param name="GraphType" value="Mean"/>
        <!-- <param name="TagNamesToGraph" value="可选tag"/> -->
        <appender-ref ref="graphsFileAppender"/><!-- 如果不分析长期监控信息，这里就不就注释掉好了，不用把监控信息写文件保留了 -->
    </appender>

	<!-- 生成tps的图表 -->
    <appender name="graphExecutionTPS"
              class="org.perf4j.log4j.GraphingStatisticsAppender">
        <param name="GraphType" value="TPS"/>
        <!-- <param name="TagNamesToGraph" value="可选tag"/> -->
        <appender-ref ref="graphsFileAppender"/>
    </appender>
    
    <!-- 生成最小执行时间的图表 -->
    <appender name="graphMinExecutionTimes"
              class="org.perf4j.log4j.GraphingStatisticsAppender">
        <param name="GraphType" value="Min"/>
        <!-- <param name="TagNamesToGraph" value="可选tag"/> -->
        <appender-ref ref="graphsFileAppender"/>
    </appender>
    
    <!-- 生成最大执行时间的图表 -->
    <appender name="graphMaxExecutionTimes"
              class="org.perf4j.log4j.GraphingStatisticsAppender">
        <param name="GraphType" value="Max"/>
        <!-- <param name="TagNamesToGraph" value="可选tag"/> -->
      	<appender-ref ref="graphsFileAppender"/>
    </appender>
    
    <!-- 生成总量的图表 -->
    <appender name="graphExecutionCount"
              class="org.perf4j.log4j.GraphingStatisticsAppender">
        <param name="GraphType" value="Count"/>
        <!-- <param name="TagNamesToGraph" value="可选tag"/> -->
        <appender-ref ref="graphsFileAppender"/>
    </appender>
    
    <!-- 记录图表生成url的log文件 -->
    <appender name="graphsFileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="perfGraphs.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>

    <!-- Loggers -->
	<!-- 配置perf4j logger Additivity设置成false主要因为是不想让代码运行时间的日志输出给上游appenders，即不要在控制台输出。  -->
    <logger name="org.perf4j.TimingLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="CoalescingStatistics"/>
    </logger>

	<!-- Root logger打印所有日志，但不包含perf4j的信息。原因是在TimingLogger配置中设置了additivity为false  -->
    <root>
        <level value="INFO"/>
        <appender-ref ref="console"/>
    </root>
    
    <!-- debug mode for HttpClient 3.0 -->
    <logger name="httpclient.wire.header">
    	<level value="info"/>
    	<!-- <appender-ref ref="console"/> -->
    </logger>
    
    <logger name="org.apache.commons.httpclient">
    	<level value="info"/>
    	<!-- <appender-ref ref="console"/> -->
    </logger>
    
    <!-- debug mode for HttpClient 4 -->
    <logger name="org.apache.http">
    	<level value="DEBUG"/>
    	<!-- <appender-ref ref="console"/> -->
    </logger>
    
    
</log4j:configuration>
